.unity-label {
    color: rgb(180, 180, 180);
    -unity-font-style: bold;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
}

#container {
    position: absolute;
    width: 100%;
    height: 100%;
}

#skip-prompt {
    position: absolute;
    bottom: 50px;
    width: 100%;
    -unity-text-align: middle-center;
    font-size: 20px;
    transition-duration: 0.3s;
    opacity: 0.8;
}

#skip-prompt:hover {
    opacity: 1;
}